    <style>
        .checkout-container {
            display: flex;
            flex-wrap: wrap;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 1rem;
        }
        .checkout-form {
            flex: 2;
            padding: 1rem;
        }
        .checkout-summary {
            flex: 1;
            padding: 1rem;
            background-color: #f5f5f5;
            border-radius: 5px;
        }
        .form-label {
            font-weight: bold;
        }
        .payment-methods {
            display: flex;
