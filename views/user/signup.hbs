<div class="container d-flex justify-content-center align-items-center min-vh-100 signup-container"> 
    <div class="row">    
              
        <div class=" signup-container">
          <h5 class="  text-center">Create new account</h5> 
            <form action="/signup" method="post" class="signup-form"> 
                <div class="mb-3">
    <label for="name" class="form-label">Name</label> 
    <input type="text" class="form-control" id="name" name="name" aria-describedby="nameHelp"> 
</div>
<div class="mb-3"> 
    <label for="email" class="form-label">Email address</label>
    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"> 
</div> 

                <div class="mb- for="password" class="form-label">Password</label> 
                    <input type="password" class="form-control" id="password" name="password"> 
                </div>
                <div class="mb-3 for="confirmPassword" class="form-label">Confirm Password</label> 
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"> 
                </div>
                <button type="submit" class="btn btn-primary w-100 signup-button">Sign Up</button> 
                 <div class="text-center mt-3">
                    <a href="/login">Already have account? Login here</a> 
                </div>
            </form>
        </div>
    </div> 
</div> 
